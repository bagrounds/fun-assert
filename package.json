{
  "name": "fun-assert",
  "version": "0.6.0",
  "description": "Generate assertion functions that throw errors on failure.",
  "main": "src/index.js",
  "scripts": {
    "pretest": "npm run lint",
    "test": "tap -Rtap --coverage-report=text-summary ./test/index.js",
    "coverage": "tap --coverage-report=lcov ./test/index.js",
    "pages-index": "showdown makehtml -i README.md -o public/index.html",
    "pages": "./script/pages.sh",
    "lint": "eslint --ignore-path .gitignore --fix .",
    "document": "jsdoc --destination docs -c .jsdoc.json -r"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/bagrounds/fun-assert.git"
  },
  "author": "bagrounds@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/bagrounds/fun-assert/issues"
  },
  "homepage": "https://gitlab.com/bagrounds/fun-assert#README",
  "dependencies": {
    "fun-predicate": "^0.8.1",
    "specifier": "^0.8.1",
    "stringify-anything": "^0.2.0"
  },
  "devDependencies": {
    "eslint": "^3.12.2",
    "fun-test": "^0.10.0",
    "fun-test-runner": "^0.4.1",
    "fun-transform": "^0.3.0",
    "jsdoc": "^3.4.3",
    "showdown": "^1.5.3",
    "tap": "^8.0.1"
  }
}
